    <property>
      <code>{{groovy}}
        import javax.inject.Named
        import javax.inject.Singleton
        import javax.inject.Inject

        import org.xwiki.component.annotation.Component
        import org.xwiki.component.annotation.ComponentAnnotationLoader
        import org.xwiki.script.service.ScriptService
        import org.xwiki.configuration.ConfigurationSource

        @Component
        @Named("googleAppsService")
        @Singleton
        public class GoogleAppsScriptService implements ScriptService
        {

          @Inject
          @Named("xwikicfg")
          private ConfigurationSource xwikicfg;

          /**
          * checks that the xwiki.cfg adjustments are in.
          * @return true if the config is found and the adustments are not in.
          */
          public missesAuthenticationConfig() {
            /*
              xwiki.authentication.authclass=com.xpn.xwiki.user.impl.xwiki.GroovyAuthServiceImpl
              xwiki.authentication.groovy.pagename=xwiki:GoogleApps.AuthService
            */
            if(xwikicfg == null) {
              System.err.println("No xwikicfg");
              return false;
            }
            def authClass = xwikicfg.getProperty("xwiki.authentication.authclass");
            def pageName = xwikicfg.getProperty("xwiki.authentication.groovy.pagename")
            return !(
              authClass == "com.xpn.xwiki.user.impl.xwiki.GroovyAuthServiceImpl" &amp;&amp;
              pageName == "xwiki:GoogleApps.AuthService" );
          }
        }

        // the objects and the registration below are mostly copied from
        // https://extensions.xwiki.org/xwiki/bin/view/Extension/Script%20Module/GroovyScriptServiceTutorial
        // See comments on code there.

        def componentManager = services.component.getRootComponentManager();
        def loader = new ComponentAnnotationLoader()
        def descriptors = loader.getComponentsDescriptors(GoogleAppsScriptService.class)

        for (descriptor in descriptors) {
          componentManager.registerComponent(descriptor)
        }
        {{/groovy}}</code>
