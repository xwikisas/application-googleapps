    <property>
      <code>define('googleapps-buttons-messages', {
  prefix: 'googleapps.',
  keys: [
    'edit.editingoogleapps.link',
    'import.importfromgoogleapps'
  ]
});
require(['jquery', 'xwiki-l10n!googleapps-buttons-messages'], function ($, l10n) {
  var listener = function () {
    var hasPagination = $("#_attachments table").length &gt; 0;
    $("#_attachments span.name").each(function (i, elem) {
      var searchPoint = hasPagination ? $(elem).closest('tr').find('.attachmentActions') : $(elem.parentNode).find('.xwikibuttonlinks');
      if ($(searchPoint).find('a.editlink').length) {
        return;
      }
      var dlink = hasPagination ? $(searchPoint).find(".actiondelete") : $(searchPoint).find(".deletelink");
      if (dlink.length &gt; 0) {
        var dlinkurl = dlink[0].href;
        var dlinkpos = dlinkurl.indexOf("?");
        var filename = dlinkurl.substring(dlinkurl.lastIndexOf("/", dlinkpos) + 1, dlinkpos);
        var googleDoc = new XWiki.Document('EditInGoogleApps', 'GoogleApps');
        var queryParams = {
          page: XWiki.Model.serialize(XWiki.currentDocument.documentReference),
          name: filename
        };
        $('&lt;a&gt;&lt;/a&gt;')
          .attr({
            class: 'editlink',
            href: googleDoc.getURL('view', $.param(queryParams)),
            title: l10n.get('edit.editingoogleapps.link')
          })
          .text(l10n.get('edit.editingoogleapps.link'))
          .appendTo(searchPoint);
      }
    });
    var attachaddform = $("#AddAttachment");
    if (attachaddform.find('.googleimport').length) {
      return;
    }
    var googleDoc = new XWiki.Document('ImportFromGoogleApps', 'GoogleApps');
    let spanWrapper = $('&lt;span&gt;&lt;/span&gt;')
      .attr('class', 'buttonwrapper googleimport')
      .css({
        'float': 'right',
        'position': 'relative',
        'top': '-25px'
      });
    $('&lt;a&gt;&lt;/a&gt;')
      .attr({
        href: googleDoc.getURL('view', $.param({page: XWiki.Model.serialize(XWiki.currentDocument.documentReference)}))
      })
      .text(l10n.get('import.importfromgoogleapps'))
      .appendTo(spanWrapper);
    spanWrapper.appendTo(attachaddform);
  };
  listener();
  $(document).on('xwiki:livedata:afterEntryFetch', function (event) {
    if ($(event.target).attr('id') === 'docAttachments') {
      // We need to setTimeout(0) to allow the live data to display the entries before decorating them with the buttons.
      setTimeout(listener, 0);
    }
  });
  $(document).on('xwiki:livetable:docAttachments:loadingComplete', listener);
  $(document).on('xwiki:docextra:loaded', listener);
});</code>
